= simple_form_for @photo, html: { miltipart: true } do |f|
    - if @photo.errors.any?
        #errors
            %h2
            = pluralize(photo.errors.count, "errors")
            prevented this Photo from saving
            %ul
                - @photo.errors.full_message.each do |msg|
                    %li= msg
    .form-group
        = f.input :image, input_html: {class: 'form-control'}
    .form-group
        = f.input :title, input_html: {class: 'form-control'}
    .form-group
        = f.input :description, input_html: {class: 'form-control'}
    
    = f.button :submit, class: 'btn btn-info'