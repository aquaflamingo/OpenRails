<%= simple_form_for [@topic,@uoe] do |f| %>

    <div class="field">
      <label class="label">Unit Name</label>
      <p class="has-text-grey">What is the name of this unit?</p>
        <div class="control">
         <%= f.input :title, label: false, wrapper: false, input_html: {class: 'input'}%>
        </div>
    </div>

      <div class="field">
        <label class="label">Description</label>
        <p class="has-text-grey">Describe the unit.</p>
        <div class="control">
          <%= f.input :description, label: false, wrapper: false, input_html: {class: 'input'} %>
      </div>
    </div>

    <div class="field">
      <label class="label">Points</label>
      <p class="has-text-grey"> How many points is this worth?</p>
      <div class="control">
        <%= f.input :points, label: false, wrapper: false, input_html: {class: 'input'}, unit_type: "number" %>
      </div>
    </div>

    <br/>

    <div class="field">
      <div class="control">
      <%= f.button :submit, "Create", class: 'button is-rounded is-success is-medium' %>
      </div>
    </div>
<%end%>